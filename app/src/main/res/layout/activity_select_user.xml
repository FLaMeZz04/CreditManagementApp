<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingRight="10sp"
    android:paddingLeft="10sp"
    android:paddingTop="10sp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginTop="50sp"
        app:cardElevation="5sp"
        app:cardCornerRadius="5sp"
        android:paddingRight="10sp"
        android:paddingLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="430sp">

        <TextView
            android:id="@+id/retriveName"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:fontFamily="@font/volkron"
            android:text="Test"
            android:textSize="24sp"
            android:layout_height="56dp" />
        <TextView
            android:id="@+id/retriveEmail"
            android:layout_marginTop="80sp"
            android:layout_width="match_parent"
            android:fontFamily="@font/volkron"
            android:text="Test"
            android:textSize="24sp"
            android:layout_height="56dp" />

        <TextView
            android:id="@+id/retriveNumber"
            android:layout_marginTop="150sp"
            android:layout_width="match_parent"
            android:fontFamily="@font/volkron"
            android:text="Test"
            android:textSize="24sp"
            android:layout_height="56dp" />


        <TextView
            android:id="@+id/retriveCredit"
            android:layout_marginTop="220sp"
            android:layout_width="match_parent"
            android:fontFamily="@font/volkron"
            android:text="Test"
            android:textSize="24sp"
            android:layout_height="56dp" />


        <Button
            android:id="@+id/transferCredit"
            android:text="Transfer Credit"
            android:fontFamily="@font/volkron"
            android:textSize="18sp"
            android:layout_marginTop="280sp"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <Button
            android:onClick="OnClick"
            android:id="@+id/backButton"
            android:text="Back"
            android:fontFamily="@font/volkron"
            android:textSize="18sp"
            android:layout_marginTop="360sp"
            android:layout_width="match_parent"
            android:layout_height="56dp" />


    </android.support.v7.widget.CardView>

</LinearLayout>